{
  "version": 2,
  "name": "samadhanhub",
  "alias": [
    "samadhanhub.com"
  ],
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "client-agnivirya/dist",
  "installCommand": "npm run install:all",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/health",
      "destination": "/api/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "APP_MODE": "prod",
    "ENVIRONMENT": "vercel",
    "PROD_DOMAIN": "samadhanhub.com"
  }
}